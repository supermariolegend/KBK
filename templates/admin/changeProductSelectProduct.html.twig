{# *********** templates/changeProductSelectProduct.html.twig ********** #}

{% extends '_base.html.twig' %}

{# ----------------------------------------#}
{% block title %}
    {{ title }}
{% endblock %}

{# ----------------------------------------#}
{% block adminProductNavStyle %}current_page{% endblock %}

{# ----------------------------------------#}
{% block main %}
<div class="search_box">
    <p>Search</p>
    <form name="searchForm" method="get" action="/adminSearch">
        <input type="text" name="keywords" size="25" maxlength="30" placeholder="Search products"/>
        <input type="submit" name="search"/>
        <p>By name:
            <input type="submit" name="name" value="ascending">
            <input type="submit" name="name" value="descending">
        </p>
        <p>By calories:
            <input type="submit" name="calories" value="ascending">
            <input type="submit" name="calories" value="descending">
        </p>
        <p>By description:
            <input type="submit" name="description" value="ascending">
            <input type="submit" name="description" value="descending">
        </p>
        <p>By price:
            <input type="submit" name="price" value="ascending">
            <input type="submit" name="price" value="descending">
        </p>
        <input type="hidden" name="search_type" value="product">
    </form>
</div>
<div class="content">
    <table>
        {{ html|raw }}
        <tr>
            <th>
                <img src="/images/admin_add.png" width="300" height="300" alt="Add a new product">
            </th>
            <td>
                <form id="addProduct" action="/adminAddProduct" method="get">
                    <span class="product" onclick="document.getElementById('addProduct').submit()">Add a new product</span>
                    <input type="hidden" name="categoryID" value="{{ categoryID }}">
                    <input type="hidden" name="categoryName" value="{{ categoryName }}">
                    <input type="hidden" name="categorySummary" value="{{ categorySummary }}">
                </form>
            </td>
        </tr>
    </table>
</div>
{{ deleteErrorMessage|raw }}
<script src="/js/changeProduct.js" ></script>
{% endblock %}