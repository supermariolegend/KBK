{# *********** templates/addProduct.html.twig ********** #}

{% extends '_base.html.twig' %}

{# ----------------------------------------#}
{% block title %}
    {{ title }}
{% endblock %}

{# ----------------------------------------#}
{% block adminProductNavStyle %}current_page{% endblock %}

{# ----------------------------------------#}
{% block main %}
    <h1>Add a new product in {{ categoryName }}</h1>
    <form id="addProduct" action="/adminAddProduct" method="get"></form>
    <form id="uploadImage" action="/adminUploadImage" method="post" enctype="multipart/form-data"></form>
    <div id="forms">
        <table class="adminChange">
            <tr>
                <th>
                    Product Name:
                </th>
                <td>
                    <input type="text" name="productName" form="addProduct" autofocus placeholder="Product Name"/>
                </td>
            </tr>
            <tr>
                <th>
                    Product image:
                    <br>
                    <em>(from an existing one)</em>
                </th>
                <td>
                    {{ productImageSelection|raw }}
                </td>
            </tr>
            <tr>
                <th>
                   Product image:
                   <br>
                   <em>(an image from the images folder)</em>
                </th>
                <td>
                    <input type="text" name="productImageURL2" form="addProduct" placeholder="Image name"/>
                </td>
            </tr>
            <tr>
                <th>
                    Product image:
                    <br>
                    <em>(upload an image to the images folder)</em>
                </th>
                <td>
                    <input type="file" name="imageToUpload" form="uploadImage">
                    <input type="hidden" name="changeItemURL" form="uploadImage" value="{{ changeItemURL }}">
                    <input type="submit"  name="submit" form="uploadImage" value="Upload">
                </td>
            </tr>
            <tr>
                <th>
                    Product description:
                </th>
                <td>
                    <textarea class="width_fill" name="productDescription" form="addProduct" rows="5" placeholder="A description of this product"></textarea>
                </td>
            </tr>
            <tr>
                <th>
                    Product Calories
                </th>
                <td>
                    <input type="number" name="productCalories" form="addProduct" placeholder="The amount of calories"/>
                </td>
            </tr>
            <tr>
                <th>
                    Product Allergy Information
                </th>
                <td>
                    <textarea class="width_fill" name="productAllergyInfo" form="addProduct" rows="2" placeholder="Any allergens that could possibly be in this product"></textarea>
                </td>
            </tr>
            <tr>
                <th>
                    Product Price(in Euro)
                </th>
                <td>
                    <input type="number" name="productPrice" form="addProduct" placeholder="Product Price" step="0.01"/>
                </td>
            </tr>
            <tr>
                <th></th>
                <td>
                    <input type="submit" name="submit" form="addProduct" value="Submit" />
                </td>
            </tr>
        </table>
        <input type="hidden" name="categoryID" form="addProduct" value="{{ categoryID }}" />
        <input type="hidden" name="categoryName" form="addProduct" value="{{ categoryName }}" />
        <input type="hidden" name="categorySummary" form="addProduct" value="{{ categorySummary }}" />
    </div>
    {{ resultMessage }}
{% endblock %}